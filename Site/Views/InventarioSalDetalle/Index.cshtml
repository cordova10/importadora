@{
    ViewBag.Title = "Index";
    Layout = null;
}

<h2>@ViewBag.Titulo</h2>
<p>
    @Html.ActionLink("Nuevo", "Create", new { IdTrans = ViewBag.IdTrans }, new {@class= "btn btn-info", data_modal = "" })
